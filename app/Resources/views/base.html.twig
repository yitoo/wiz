<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}WorkInZen!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="google-site-verification" content="O8e8w3lCJkLMjPtYuGwP_snLOBtWinaHVtG01jS_xyY" />
    </head>
    <body>
        <header>
            <div class="logo">
                <img class="logo" src="{{ asset('logo.png') }}">
            </div>
            <div class="base_line">Tout simplement</div>
            <div class="user">
                {% if app.session.has('fullName') %}
                    <span>{{ app.session.get('fullName') }}</span>
                    <span>{{ app.session.get('email') }}</span>
                {% endif %}
            </div>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>