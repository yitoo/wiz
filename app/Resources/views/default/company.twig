{% extends 'base.html.twig' %}
{% block body %}
  <section class="main-block company-bg flex-center">
    <div class="shadow opacity7"></div>
    <div class="main-content flex-spb col-wh">
      <picture>
        <source media="(min-width: 580px)" srcset="{{ asset('images/workinzen-logo-short.png') }}">
        <source srcset="{{ asset('images/workinzen-logo-short-sm.png') }}">
        <img class="short-logo" src="{{ asset('images/workinzen-logo-short.png') }}" alt="Workinzen logo">
      </picture>
      <h1>Je suis une entreprise</h1>
      <h2 class="chapo col-dwh">
        Pour travailler dans un environnement saint et apaisant
        ou vous voulez offrir, Lorem ipsum dolor sit amet, consectetur
        adipiscing elit sed do eiusmod.
      </h2>
      <form method="post" action="{{ url('company_signup') }}">
        <div class="item-wrapper">
          <input name="company" required class="textfield bgcol-wh col-lgr mr-sm" placeholder="Votre entreprise" type="text"/>
          <input name="email" required class="textfield bgcol-wh col-lgr mr-sm" placeholder="Votre adresse e-mail" type="email"/>
          <button class="button valid-button" type="submit">OK</button>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
